{
  "name": "angular-theming",
  "version": "0.0.0-development",
  "description": "angular multiple theme components",
  "author": "anumangenc@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/anumang/angular-theming/issues"
  },
  "homepage": "https://github.com/anumang/angular-theming#readme",
  "angular-cli": {},
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "test": "ng test",
    "pree2e": "webdriver-manager update --standalone false --gecko false",
    "e2e": "protractor",
    "lint": "ng lint",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/anumang/angular-theming.git"
  },
  "keywords": [
    "angular",
    "theme",
    "theming",
    "component"
  ],
  "dependencies": {
    "@angular/common": "^2.3.1",
    "@angular/compiler": "^2.3.1",
    "@angular/core": "^2.3.1",
    "@angular/forms": "^2.3.1",
    "@angular/http": "^2.3.1",
    "@angular/platform-browser": "^2.3.1",
    "@angular/platform-browser-dynamic": "^2.3.1",
    "@angular/router": "^3.3.1",
    "chromedriver": "^88.0.0",
    "core-js": "^2.4.1",
    "rxjs": "^5.0.1",
    "ts-helpers": "^1.1.1",
    "zone.js": "^0.7.2",
    "protractor": "^4.0.14"
  },
  "devDependencies": {
    "@angular/compiler-cli": "^2.3.1",
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@types/jasmine": "2.5.38",
    "@types/node": "6.0.42",
    "angular-cli": "1.0.0-beta.28.3",
    "codelyzer": "^6.0.1",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^4.3.8",
    "jasmine-core": "2.5.2",
    "jasmine-spec-reporter": "2.5.0",
    "karma": "1.2.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-cli": "^1.0.1",
    "karma-jasmine": "^1.0.2",
    "karma-remap-istanbul": "^0.2.1",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "semantic-release": "^17.4.1",
    "stylelint": "^13.12.0",
    "stylelint-config-standard": "^21.0.0",
    "ts-node": "1.2.1",
    "tslint": "^5.5.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^4.1.5",
    "typescript-tslint-plugin": "^1.0.1"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{scss,css}": [
      "stylelint --fix"
    ],
    "*": [
      "prettier --loglevel warn --write"
    ],
    "src/**/*.ts": [
      "tslint --project src/tsconfig.json --fix"
    ],
    "e2e/**/*.ts": [
      "tslint --project e2e/tsconfig.json --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
